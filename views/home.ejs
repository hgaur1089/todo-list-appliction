<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>

    <script
      src="https://kit.fontawesome.com/c97cf72275.js"
      crossorigin="anonymous"
    ></script>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/home.css" />
  </head>

  <body>
    <div class="center-screen todo">
      <header>
        <h2>Create New Query</h2>
      </header>

      <main>
        <form action="/create-list/createList" method="POST" class="form-container">
        
        <div class="form-description">
            <label for="description" class="form-label">DESCRIPTION</label>
            <textarea
                class="form-control"
                id="description"
                placeholder="What do you need to do?"
                rows="3"
                name="description"
            ></textarea>
        </div>
          
        <div class="form-category-date">
            <div class="form-category">
                <label for="category" class="form-label">CATEGORY</label>
                <input
                class="form-control"
                list="datalistOptions"
                id="category"
                name="category"
                placeholder="Type to search..."
                />
                <datalist id="datalistOptions">
                <option value="Personal"></option>
                <option value="Work"></option>
                <option value="School"></option>
                <option value="Cleaning"></option>
                <option value="Others..."></option>
                </datalist>
            </div>

            <div class="form-date">
                <label for="due-date" class="form-label">DUE DATE</label>
                <input
                type="date"
                class="form-control"
                name="date"
                />
            </div>
        </div>

        <div class="form-buttons">
          <button type="reset" class="btn btn-dark btn-lg">
            <i class="fas fa-redo"></i>
            Reset
          </button>
          <button type="submit" class="btn btn-primary btn-lg">
            <i class="far fa-plus-square"></i>
            Add Task
          </button>
        </div>  
        </form>
      </main>
    </div>

    <div class="sidebar">
      <header>
        <h1>
          My ToDo List
        </h1>
      </header>
      <% for (let i of list_item) { %> 
        <div class="list-item">
          <div class="list-item-div bd-highlight">

            <div class="p-2 descrip bd-highlight">
              <p class="p-1 no-margin"> <%= i.description %> </p>

              <div class="d-flex flex-row">
                <i class="fas fa-calendar-alt fa-lg p-2"></i>
                <p class="p-1 no-margin"> <%= i.date.toDateString() %> </p>
              </div>
            </div>

            <div class="p-2 catego bd-highlight  ">
              <% if(i.category == 'Personal') {%>
                  <p class="btn btn-primary btn-center btn-width"> <%= i.category %></p>
              <%} else if(i.category == 'Work') {%>
                    <p class="btn btn-success btn-center btn-width"> <%= i.category %></p>
              <%} else if(i.category == 'School') {%>
                <p class="btn btn-dark btn-center btn-width"> <%= i.category %></p>
              <%} else if(i.category == 'Cleaning') {%>
                  <p class="btn btn-info btn-center btn-width"> <%= i.category %></p>
              <%} else {%>
                <p class="btn btn-warning btn-center btn-width"> <%= i.category %></p>
              <%}%>
            </div>

            <div class="p-2 delet bd-highlight">
              <a href="/delete-list/deletelist/?id=<%= i._id %>" role="button" class="btn btn-danger btn-center">
                <i class="fas fa-trash-alt fa-lg"></i>
              </a>
            </div>

          </div>
        </div>
      <%}%>
       
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
